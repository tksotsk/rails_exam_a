<%= render 'header' %>

<div id = "body">
  <p id="notice"><%= notice %></p>

<h1>ツイートの一覧</h1>

<table>
  <thead>
    <tr>
      <th>内容</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to 'ツイートを見る', post %></td>
        <td><%= link_to 'ツイートを編集する', edit_post_path(post) %></td>
        <td><%= link_to 'ツイートを削除する', post, method: :delete, data: { confirm: 'ほんまによろしいですか？？' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しいツイート', new_post_path %>
</div>

<%= render 'footer' %>
